generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  email     String      @unique
  hash      String
  hashedRt  String?
  account   String
  avatar    String?
  status    BasicStatus @default(ENABLE)
  roles     Role?

  @@map("users")
}

model Log {
  id        Int      @id @default(autoincrement())
  level     String
  message   String
  meta      Json?
  timestamp DateTime @default(now())
}

model Role {
  id     Int  @id @default(autoincrement())
  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

enum BasicStatus {
  DISABLE
  ENABLE
}
